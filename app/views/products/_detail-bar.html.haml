.detail-bar
  .detail-bar__link
    = link_to "FURIMA", root_path, class: "detail-bar__link--top"
    = icon('fas', 'angle-right', class: "detail-bar__link--icon")
    = link_to @product.category.root.name, "#", class: "detail-bar__link--parent-category"
    = icon('fas', 'angle-right', class: "detail-bar__link--icon")
    = link_to @product.category.parent.name, "#", class: "detail-bar__link--child-category"
    = icon('fas', 'angle-right', class: "detail-bar__link--icon")
    = link_to @product.category.name, "#", class: "detail-bar__link--grandchild-category"
    = icon('fas', 'angle-right', class: "detail-bar__link--icon")
    = link_to @product.name, "#", class: "detail-bar__link--product"
  