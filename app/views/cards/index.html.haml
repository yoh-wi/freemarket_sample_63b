.mypage
  = render "products/header"
  .mypage-main
    = render "users/mypage-side"
    .mypage-main__container
      %section.card-info
        .card-info__head
          支払い方法
        .card-info__content
          .card-info__content__title
            クレジットカード一覧
          .card-info__content__list
            = form_with url: card_path(@card.id), method: :delete, local: true, id: 'charge-form' do |f|
              .card-info__content__list__detail
                = "**** **** ****" + @default_card_information.last4
                %br
                - exp_month = @default_card_information.exp_month.to_s
                - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                = exp_month + " / " + exp_year
                %input{type: "hidden", name: "card_id", value: ""}
              .card-info__content__list__delete
                = f.submit "削除する", {class: "card-info__content__list__delete--btn"}
          -# .card-info__content__add
          -#   = link_to new_card_path, class: "card-info__content__add--btn" do
          -#     = icon('far', 'credit-card', class: "card-icon")
          -#     クレジットカードを追加する
          .card-info__content__help
            = link_to "#", class: "card-info__content__help--link" do
              支払い方法について
              = icon('fas', 'chevron-right', class: "arrow-right-icon")

