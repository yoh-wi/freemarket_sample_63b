.address-detail
  .address-detail__head
    発送元・お届け先住所
  .address-form
    = form_with(url: users_addresses_path, model: @address, local: true, id: 'address_form') do |f|
      .address-form__contents.last_name
        = f.label :last_name_kanji, "お名前", class: "address-form__contents--label"
        = f.label :require, "必須", class: "address-form__contents--require"
        = f.text_field :last_name_kanji, placeholder: '例）山田', class: "address-form__contents--field", id: 'last_name'
      .address-form__contents.first_name
        = f.label :first_name_kanji, class: "address-form__contents--hidden"
        = f.text_field :first_name_kanji, placeholder: '例）彩', class: "address-form__contents--nonlabel", id: 'first_name'
      .address-form__contents.last_name_kana
        = f.label :last_name_kana, "お名前カナ", class: "address-form__contents--label"
        = f.label :require, "必須", class: "address-form__contents--require"
        = f.text_field :last_name_kana, placeholder: '例）ヤマダ', class: "address-form__contents--field", id: 'last_name_kana'
      .address-form__contents.first_name_kana
        = f.label :first_name_kana, class: "address-form__contents--hidden"
        = f.text_field :first_name_kana, placeholder: '例）アヤ', class: "address-form__contents--nonlabel", id: 'first_name_kana'
      .address-form__contents.postal_code
        = f.label :postal_code, "郵便番号", class: "address-form__contents--label"
        = f.label :require, "必須", class: "address-form__contents--require"
        = f.text_field :postal_code, placeholder: '例）1234567(ハイフンなし7桁)', class: "address-form__contents--field", id: 'postal_code'
      .address-form__contents.prefecture
        = f.label :prefecture_id, "都道府県", class: "address-form__contents--label"
        = f.label :require, "必須", class: "address-form__contents--require"
        = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--", class: "address-form__contents--field", id: 'prefecture'
      .address-form__contents.municipality
        = f.label :municipality, "市区町村", class: "address-form__contents--label"
        = f.label :require, "必須", class: "address-form__contents--require"
        = f.text_field :municipality, placeholder: '例）横浜市緑区', class: "address-form__contents--field", id: 'municipality'
      .address-form__contents.house_number
        = f.label :house_number, "番地", class: "address-form__contents--label"
        = f.label :require, "必須", class: "address-form__contents--require"
        = f.text_field :house_number, placeholder: '例）青山1-1-1', class: "address-form__contents--field", id: 'house_number'
      .address-form__contents
        = f.label :building_name, "建物名", class: "address-form__contents--label"
        = f.label :require, "任意", class: "address-form__contents--optional"
        = f.text_field :building_name, placeholder: '例）柳ビル103', class: "address-form__contents--field"
      .address-form__contents.tel  
        = f.label :tel, "電話", class: "address-form__contents--label"
        = f.label :require, "任意", class: "address-form__contents--optional"
        = f.text_field :tel, placeholder: '例）09012345678', class: "address-form__contents--field", id: 'tel'
      = f.button class: "address-form__contents--btn"
    - if @address.persisted?
      = link_to "住所を削除する", users_addresses_path(@address), method: :delete, class: "address-form__contents--btn--delete"